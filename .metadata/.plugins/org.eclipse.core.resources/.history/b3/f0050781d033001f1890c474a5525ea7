spring.application.name=devsueureka
server.port=8762

# Configuración de Eureka Client
eureka.client.register-with-eureka=false
eureka.client.fetch-registry=false

# Exponer todos los endpoints de gestión
management.endpoints.web.exposure.include=*

# Deshabilitar Ribbon explícitamente si no se usa LoadBalancer
spring.cloud.loadbalancer.ribbon.enabled=false

# Deshabilitar el cliente de configuración de Spring Cloud Config
spring.cloud.config.enabled=false

# Configuración de nivel de logging para Spring
logging.level.org.springframework=DEBUG
